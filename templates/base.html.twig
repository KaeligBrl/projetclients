<!doctype html>
<html lang="{{ app.request.locale }}">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <title>{%  block title %}{% block title_base %}Projets clients{% endblock %}{% endblock %}</title>

    {% block stylesheets %}
		<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
        <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css" integrity="sha384-ggOyR0iXCbMQv3Xipma34MD+dH/1fQ784/j6cY/iJTQUOhcWr7x9JvoRxT2MZw1T" crossorigin="anonymous">
        <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.7.1/css/all.css" integrity="sha384-fnmOCqbTlWIlj8LyTjo7mOUStjsKC4pOpQbqyi7RrhN7udi9RwhKkMHpvLbHG9Sr" crossorigin="anonymous">
        <link href="{{ asset('assets/css/root.css') }}" rel="stylesheet">
        <link href="{{ asset('assets/css/front/custom.css') }}" rel="stylesheet">
        <link href="{{ asset('assets/css/motdepasse.css') }}" rel="stylesheet">
        <link href="{{ asset('assets/css/front/responsive.css') }}" rel="stylesheet">
    {% endblock %}
</head>
<body>
    <header>
    <nav class="navbar-expand-lg navbar-dark bg-yellow pr-2">
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavTopBar" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
            <span class="" role="button" ><i class="fa fa-bars" aria-hidden="true" style="color:#e6e6ff"></i></span>
        </button>
            <div class="navbar-collapse collapse w-100 order-3 dual-collapse2" id="navbarNavTopBar">
                <ul class="navbar-nav ml-auto">
                    <li class="nav-item">
                        <a class="nav-link" href="https://todo.shebam.fr/" target="new" style="color: var(--color-blue-dark)">&nbsp; Liste des tâches</i></a>
                    </li>
                    
                    <li class="nav-item">
                        <a class="nav-link" href="http://rappels.shebam.fr/" target="new" style="color: var(--color-blue-dark)">&nbsp; Rappels Clients</i></a>
                    </li>
                    
                    <li class="nav-item">
                        <a class="nav-link" href="{{ path('app_logout') }}" style="color: var(--color-blue-dark)"><i class="fas fa-unlock"></i>&nbsp; Déconnexion</i></a>
                    </li>
                </ul>
            </div>
        </nav>

        <nav class="navbar navbar-expand-lg bg-blue-dark">
            <a href="{{ path('current_project') }}">
		        <img class="d-block mx-auto" src="{{ asset('/assets/images/logo-projet-clients-nav.png') }}" alt="Logo de connexion To Do List">
            </a>
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                <span class="" role="button" ><i class="fa fa-bars" aria-hidden="true" style="color:#e6e6ff"></i></span>
            </button>
            <div class="collapse navbar-collapse bg-blue-dark text-center p-4" id="navbarNav">
                <ul class="navbar-nav ml-auto">
                {% if app.user %}
                    {% if is_granted('ROLE_ADMIN') %}
                            <li class="nav-item"> 
                                <a class="
                                    {% if app.request.attributes.get('_route') starts with 'current_project' %}active{% endif %}
                                    {% if app.request.attributes.get('_route') starts with 'project_modify' %}active{% endif %}
                                    {% if app.request.attributes.get('_route') starts with 'project_add' %}active{% endif %}
                                    navbar-text text-uppercase text-border" href="{{ path('current_project') }}">PROJETS EN COURS</a>
                            </li>
                            <li class="nav-item"> 
                                <a class="
                                    {% if app.request.attributes.get('_route') starts with 'finished_projects' %}active{% endif %}
                                    navbar-text color-blue-dark text-uppercase" href="{{ path('finished_projects') }}">PROJETS FINIS</a>
                            </li>
                            <li class="nav-item"> 
                                <a class="
                                    {% if app.request.attributes.get('_route') starts with 'listing_projects' %}active{% endif %}
                                    {% if app.request.attributes.get('_route') starts with 'listing_projects_add' %}active{% endif %}
                                    {% if app.request.attributes.get('_route') starts with 'listing_projects_modify' %}active{% endif %}
                                    navbar-text color-blue-dark text-uppercase" href="{{ path('listing_projects') }}">PROJETS CLIENTS</a>
                            </li>
                            <li>
                                <a class="{% if app.request.attributes.get('_route') starts with 'list_customer' %}active{% endif %} navbar-text color-blue-dark text-uppercase" title="Aller sur l'administration" href="{{ path('list_customer') }}">Administration</a>
                            </li>
                    {% endif %}
                {% endif %}
                </ul> 
            </div>
        </nav>
            
    </header>

    <main role="main">
        <div class="container-fluid" style="margin-top: 100px;">
            {% block content %}{% endblock %}
        </div>
    </main>

{% block javascripts %}
	<script src="https://code.jquery.com/jquery-3.3.1.slim.min.js" integrity="sha384-q8i/X+965DzO0rT7abK41JStQIAqVgRVzpbzo5smXKp4YfRvH+8abtTE1Pi6jizo" crossorigin="anonymous"></script>
	<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM" crossorigin="anonymous"></script>
    <script src="{{ asset('assets/js/bootstrap-table.js') }}"></script>
    <script src="{{ asset('assets/js/checkbox.js') }}"></script>
    <script src="https://cdn.jsdelivr.net/npm/select2@4.1.0-rc.0/dist/js/select2.min.js"></script>
    <script src="{{ asset('assets/js/comment-popup.js') }}"></script>

{% endblock %}

</body>
</html>