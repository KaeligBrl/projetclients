{% extends 'back/index.html.twig' %}

{% block content %}
<!doctype html>
<html lang="fr">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <title>{%  block title %}Filtres - {% block title_base %}{{ parent() }}{% endblock %}{% endblock %}</title>
    </style>
</head>
	<body>
		<div class="container">
		<h1 class="text-center color-white">Filtres Activités</h1>	
		<div class="mb-3"></div>
		<div class="separator"></div>
			<div class="row">
				<div class="col padding-mobile">
					{% if is_granted('IS_AUTHENTICATED_FULLY') and is_granted('ROLE_ADMIN') %}
						<div class="d-flex flex-row-reverse">
							<a href="{{ path('filter_activitie_add') }}" title="Ajouter un filtre" type="button" class="btn mb-3">
								<i class="color-white fas fa-plus-circle"></i>
							</a>
						</div>
						<table class="table mb-5 table-bordered">
							<thead class="bg-blue-dark-light table-borderless">
								<tr>
									<th class="color-yellow text-bold" scope="col">Nom</th>
									{% if is_granted('IS_AUTHENTICATED_FULLY') and is_granted('ROLE_ADMIN')%}
										<th class="color-yellow text-bold" scope="col">Action</th>
									{% endif %}
								</tr>
							</thead>
							<tbody class="bg-blue-dark">
								{% for filterlist in filterslist %}
									<tr class="form-switch">
										<td class="color-white text-bold">{{ filterlist.name }}</td>
										{% if is_granted('IS_AUTHENTICATED_FULLY') and is_granted('ROLE_ADMIN')%}
										<td>
                                            <a href="{{ path('filter_activitie_modifiy', {"id": filterlist.id}) }}"  title="Modifier"><i class="color-yellow fas fa-cog"></i></a>
                                            <span class="color-yellow">|</span>
                                            <a href="{{ path('filter_activitie_detete', {"id": filterlist.id}) }}" onclick="return confirm('Attention vous vous apprettez à supprimer une étape')"  title="Supprimer"><i class="color-yellow fas fa-trash"></i></a>
										</td>
										{% endif %}	
									</tr>
								{% endfor %}
							</tbody>
						</table>
					{% endif %}
				</div>
		</div>
	</body>
</html>
{% endblock %}
