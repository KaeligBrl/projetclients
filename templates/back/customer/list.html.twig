{% extends 'back/index.html.twig' %}

{% block title %}Clients - {% block title_base %}{{ parent() }}{% endblock %}{% endblock %}

{% block body %}
	{% block content %}
		<div class="container">
		<h1 class="text-center color-white">Clients</h1>	
		<div class="mb-3"></div>
		<div class="separator"></div>
		<div class="d-flex flex-row-reverse">
			<a href="{{ path('add_customer') }}" title="Ajouter un filtre" type="button" class="btn mb-3">
				<i class="color-white fas fa-plus-circle"></i>
			</a>
		</div>
			<table id="testaa" class="table table-bordered" data-toggle="table" data-pagination="true" data-search="true">
				<thead class="bg-blue-dark-light">
					<tr>
						<th class="color-yellow" scope="col">En cours</th>
                        <th class="color-yellow" scope="col">Action</th>
					</tr>
				</thead>
				<tbody class="bg-blue-dark table-borderless">
					{% for customer in customer %}
						<tr>
							<td class="color-white text-bold">{{customer.name}}</td>
							<td>
								<a class="color-yellow" href="{{ path('modify_customer', {"id": customer.id}) }}"><i class="fas fa-cog"></i></a>&nbsp;
								
								<a class="color-yellow" href="{{ path('delete_customer', {"id": customer.id}) }}" onclick="return confirm('Attention vous vous apprettez à supprimer un client. Vous êtes sur ?')"><i class="fas fa-trash"></i></a>
							</td>
						</tr>
					{% endfor %}
				</tbody>
			</table>
			<p class="text-center text-bold color-white">Si tu supprimes un client, penses à verifier avant si un projet ne lui est pas attribué.</p>
		</div>
	{% endblock %}
{% endblock %}


