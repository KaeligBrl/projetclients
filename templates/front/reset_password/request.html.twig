{% extends 'base_reset_password.html.twig' %}

{% block title %}Mot de passe oublié - {% block title_base %}{{ parent() }}{% endblock %}{% endblock %}


{% block content %}
	{% for flashError in app.flashes('reset_password_error') %}
		<div class="alert alert-danger" role="alert">{{ flashError }}</div>
	{% endfor %}
	<a href="{{ path('home') }}">
		<img class="d-block mx-auto" src="{{asset('/assets/images/logo-projet-clients.png') }}" alt="Logo de connexion Projets Clients">
	</a>
	<div class="mb-5"></div>
    <div class="text-center form-general" style>
        <h1 class="color-yellow">Mot de passe oublié</h1>
		<div class="mb-3"></div>
        <div class="separator"></div>
		<div class="mb-3"></div>
            {{ form_start(requestForm) }}
            {{ form_widget(requestForm) }}
            {{ form_end(requestForm) }}
    </div>

{% endblock %}

