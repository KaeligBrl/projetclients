{% extends 'base.html.twig' %}

{% block title %}Modifier - {{project.customer }} - {% block title_base %}{{ parent() }}{% endblock %}{% endblock %}

{% block body %}
	{% block content %}
	<div class="container form-general">
		<h1 class="text-white text-center">Modification du suivi <i class="fas fa-arrow-right"></i> {{project.customer }}</h1>
		<div class="mb-3"></div>
		<div class="separator"></div>
		<div class="mb-5"></div>
		{{ form_start(form_project_modify) }}
		<div class="was-validated background-login is-valid">
		{% if notification %}
			<div class="form-success text-center">{{ notification }}
				<div class="mb-3"></div>
				<div class="separator"></div>
				<div class="mb-3"></div>
				<a href="{{ path('finished_projects') }}">Retourner Ã  la liste</a>
			</div>
		{% endif %}
			<div class="form-group">
				<div class="row">
					<div class="col">
						{{ form_row(form_project_modify.wordpressInstallation) }}
						{{ form_row(form_project_modify.domainText) }}
					</div>
					<div class="col">
						{{ form_row(form_project_modify.online) }}
						{{ form_row(form_project_modify.submit) }}
					</div>

				</div>
			</div>
		</div>
		{{ form_end(form_project_modify) }}</div>
	{% endblock %}
{% endblock %}